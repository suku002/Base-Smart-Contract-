pragma solidity ^0.8.0;

contract BasicMath {

    // Function to add two unsigned integers safely
    function adder(uint _a, uint _b) public pure returns (uint sum, bool error) {
        unchecked {
            uint c = _a + _b;
            if (c < _a) {
                // Overflow occurred
                return (0, true);
            } else {
                return (c, false);
            }
        }
    }

    // Function to subtract two unsigned integers safely
    function subtractor(uint _a, uint _b) public pure returns (uint difference, bool error) {
        unchecked {
            if (_b > _a) {
                // Underflow occurred
                return (0, true);
            } else {
                return (_a - _b, false);
            }
        }
    }
}
